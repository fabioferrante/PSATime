<resources>
    <style name="Base.Theme.PSATime" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- CORES DARK MODE -->
        <item name="colorPrimary">@color/studio_dark_primary</item>
        <item name="colorOnPrimary">@color/studio_dark_on_primary</item>

        <!-- Correção dos Controles no Dark Mode -->
        <item name="colorSecondary">@color/studio_dark_primary</item>
        <item name="colorAccent">@color/studio_dark_primary</item>
        <item name="colorControlActivated">@color/studio_dark_primary</item>

        <!-- CORREÇÃO DEFINITIVA (Força bruta do Android Nativo) -->
        <!-- Adicione estas duas linhas no seu Tema Claro também! -->
        <item name="android:colorAccent">@color/studio_dark_primary</item>
        <item name="android:colorControlActivated">@color/studio_dark_primary</item>

        <!-- CORREÇÃO DO FUNDO DE SELEÇÃO DARK -->
        <item name="colorSecondaryContainer">@color/studio_dark_selection_bg</item>
        <item name="colorOnSecondaryContainer">@color/studio_dark_primary</item>

        <!-- Fundos -->
        <item name="android:colorBackground">@color/studio_dark_background</item>
        <item name="colorSurface">@color/studio_dark_surface</item>

        <item name="colorSurfaceContainerLowest">@color/studio_dark_background</item>
        <item name="colorSurfaceContainer">@color/studio_dark_surface</item>

        <!-- Texto -->
        <item name="colorOnSurface">@color/studio_dark_text_primary</item>
    </style>

    <style name="Theme.PSATime" parent="Base.Theme.PSATime" />
</resources>

