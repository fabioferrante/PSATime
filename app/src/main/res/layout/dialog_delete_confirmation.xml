<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Excluir Resultado"
        android:textColor="?attr/colorOnSurface"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Mensagem -->
    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Tem certeza que deseja excluir este registro?"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp" />

    <!-- Botões Lado a Lado (Iguais aos do BottomSheet) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Botão Cancelar: Estilo Filled (Preenchido) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_delete"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Cancelar" />

        <!-- Botão Excluir: Estilo Filled (Preenchido) -->
        <!-- Usei a cor de Erro (Vermelho) para destacar o perigo, mas mantendo o estilo preenchido -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_delete"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="?attr/colorError"
            android:text="Excluir" />
    </LinearLayout>

</LinearLayout>